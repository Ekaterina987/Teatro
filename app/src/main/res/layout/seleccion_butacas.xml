<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionButacas"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_seleccionar"
        android:textAlignment="center"
        android:fontFamily="@font/quicksand_medium"
        android:textSize="33sp"
        android:textStyle="normal"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:id="@+id/leyenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/asientoLibre"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/seat_main5"
            android:contentDescription="@string/text_leyenda_libre"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/textLibre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_leyenda_libre"
            android:textAlignment="center"
            android:layout_marginEnd="15dp"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/asientoOcupado"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/seat_ocupada4"
            android:contentDescription="@string/text_leyenda_ocupado"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/textOcupado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_leyenda_ocupado"
            android:textAlignment="center"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/leyenda2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/asientoSeleccionado"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/seat_main5"
            android:contentDescription="@string/text_leyenda_seleccionado"
            android:alpha="0.6"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/textSeleccionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_leyenda_seleccionado"
            android:textAlignment="center"
            android:textSize="15sp"/>

    </LinearLayout>
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />



    <LinearLayout
        android:id="@+id/butacasLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/butaca1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/butaca2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnComprarEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_comprar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/intense_blue"
        android:text="@string/text_volver" />


</LinearLayout>